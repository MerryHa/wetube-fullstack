extends base.pug

block content 
    h2 Welcome here you will see the trending videos.
    ul
        each video in videos 
            div 
                h3=video.title 
                ul 
                    li #{video.rating}/5 
                    li #{video.comments} comments.
                    li Posted #{video.createAt}.
                    li #{video.views} views.
        else 
            li Sorry nothing found.